page{
    height:100%;
}
.container{
    padding:0;
    position: relative;
    padding-top: 550rpx;
}
.user-header{
    width:100%;
    height:550rpx;
    background: #22AC38;
    position:absolute;
    top: 0;
    left: 0;
}
.user-img{
    width:180rpx;
    height:180rpx;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    top:170rpx;
    transform: translate(-50%)
}
.user-name{
    color:#fff;
    position: absolute;
    left: 50%;
    top:380rpx;
    transform: translate(-50%)
}
.user-second{
    height: 100%;
    width: 100%;
    position: relative;
}
.user-funs{
    height: 100px;
    width:100%;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    display: flex;
    flex-direction: row;
}
.user-funs>view{
    width:50%;
    /* display: flex;
    flex-direction: column;
    justify-content: space-between; */
    text-align: center;
    font-size:28rpx;
}
.user-funs-text{
    font-size:16px;
}
.user-funs>view:first-child{
    border-right:1px solid #22AC38;
}
.user-funs image{
    width:130rpx;
    display: inline-block;
}
.user-balance{
    font-size:24rpx;
    color:#aaa;
}