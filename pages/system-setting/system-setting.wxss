/* pages/system-setting/system-setting.wxss */
page{
  height: 100%;
}
.container{
  display: block;
  height:100%;
  background: #F1F1F1;
  padding: 0
}
.setting-top{
  width: 100%;
  height: 1px;
}
.setting-content{
  width: 100%;
  margin-top: 20rpx;
}
.setting-line{
  background: #FFF;
  height:80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: left;
  padding: 0 30rpx;
  color: #000;
  position: relative;
}
.setting-line::after{
  content: '';
  display: block;
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: #FFF;
  border: 1rpx solid #aaa;
  border-width: 5rpx 0 0 5rpx;
  transform: rotate(135deg);
  right: 60rpx;
  bottom: 30rpx;
}
.setting-bottom{
  background: #FFF;
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  color: #000;
  margin-top: 20rpx;
}