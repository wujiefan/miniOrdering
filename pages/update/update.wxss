page{
    height:100%;
}
.container{
    padding:10px 0;
    position: relative;
    background: #F0F0F0;
    display:block;
    flex-direction:none;
    align-items:none;
}
.info{
    width:90%;
    margin:0 auto;
    padding:0 10px;
    background:#fff;
    border:1px solid #22AC38;
    box-sizing:border-box;
    border-radius:5px;
}
.info-li{
    position: relative;
    display: flex;
    flex-direction:row;
    padding:5px 0;
    border-bottom:1px solid #F2F2F2;
}
.info>.info-li:last-child{
    border-bottom:none;
}
.info-li-name{
    font-size: 14px;
    line-height:30px;
    margin-right:15px;
}
.info-li>input{
    font-size: 14px;
    line-height:30px;
    height: 30px;
}
.btn{
    margin:20px auto;
    width:90%;
    border-radius: 0;
}