/* pages/unit-services/unit-services.wxss */
/* top */
.container{
  padding:0;
  display: block;
}
.top{
    height: 280px;
    background: linear-gradient(to right, #5581FE ,#7DA4FF );
    width: 100%;
    color: #FFFFFF;
    font-size: 16px;
    padding:16px;
    box-sizing: border-box;
}
.top-left{
    display: inline-block;
    margin-right: 15px;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    margin-top:10px;
}
.logo{
  display: inline-block;
  width: 56px;
  height: 56px;
}
.user-name{
  font-size: 20px;
  font-weight: 700;
  margin-top: 10px;
}
.remaining-money{
    color: #FFF;
    font-size: 14px;
    display: inline-block;
    font-weight: 700;
    margin-top: 5px;
}
.remaining-money .number{
    width:64px;
    height:28px;
    font-size:24px;
    font-family:DINAlternate-Bold;
    font-weight:bold;
    color:#FFF;
    line-height:28px;
}
.top-right{
    display: inline-block;
    vertical-align: top;
    color: #FFFFFF;
}
.qrcode,
.scan{
    float:right;
    margin-right:20px;
    text-align: center;
    font-size: 12px;
    margin-top: 20px;
}
.qrcode{
    margin-right: 15px;
}
.qrcode image,
.scan image{
    width:22px;
    height:22px;
}
.department-name{
    font-size: 20px;
    font-weight: 600;
    text-align: center;
}
.top-right .service{
    border: 1px solid white;
    border-radius: 5px;
    font-size: 12px;
    margin-top: 12px;
    padding: 3px;
    display: inline-block;
}
/* ********** */
/* middle */
.middle{
    height: 325px;
    width: calc(100% - 30px);
    margin: 0 auto;
    color: #333333;
    padding: 22px 19px;
    box-shadow: 0 3px 9px rgba(114, 114, 114,0.15);
    position: absolute;
    top: 120px;
    left: 15px;
    background-color: white;
    border-radius: 9px;
    box-sizing: border-box;
}
.middle>view{
  text-align: center;
}
.qr-code{
    width: 180px;
    height: 180px;
}
.pay-text{
  height: 45px;
  font-size: 24px;
  margin: 0 auto;
}
.refresh-btn{
  font-size: 14px;
  cursor: pointer;
  color: #5581FE;
  height: 20px;
  margin-top: 30rpx;
}
.new-page{
    float: left;
    width: 33%;
    text-align: center;
    color: #646464;
    font-size: 12px;
}
/* ************* */
/* bottom */
.bottom{
    width:100%;
    background-color: white;
    font-size: 13px;
    height: calc(100vh - 180px);
    color: #646464;
    padding: 170px 0 0 0;
    box-sizing: border-box;
}
.bottom>view{
    margin-top: 10px;
    width: calc(100% - 50px);
    margin: 0 auto;
}
.bottom>view>navigator{
    text-align: center;
    height: 100px;
    padding: 20px 0;
    box-sizing: border-box;
}
.bottom image{
    width: 34px;
    height: 34px;
    margin-bottom: 7px; 
}
/*  */
.layer-page{
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
}
.qrcontent{
    text-align: center;
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%)
}
.line{
    width: 33px;
    height: 2px;
    border-radius: 1px;
    display: inline-block;
    line-height: 16px;
    vertical-align:middle;
}
.qr-title span:first-child{
    background:linear-gradient(270deg,rgba(125,164,255,0) 0%,rgba(85,129,254,1) 100%);
}
.qr-title span:last-child{
    background:linear-gradient(130deg,rgba(125,164,255,0) 0%,rgba(85,129,254,1) 100%);
}
.tip img{
    vertical-align: sub;
    width:14px;
}
.tip2{
    display: none;
}
.close-code{
    margin-top:33px;
    width:29px;
}