/* pages/wallet-balance/wallet-balance-detail.wxss */
.content{
    padding: 10px 10px 0 10px;
    background: #F2F2F2;
    box-sizing: border-box;
    width: 100%;
    height: 100vh;
}
.title-box{
    width:100%;
    height:100rpx;
    line-height: 100rpx;
    text-align: left;
    border-bottom: 1px dashed #F2F2F2;
    position: relative;
    background: #FFF;
    font-size:16px;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:rgba(82,85,112,1);
    padding-left: 10px;
    box-sizing: border-box;
}
.title-box::after{
    width:20rpx;
    height:20rpx;
    display: block;
    content: '';
    position: absolute;
    background: #F2F2F2;
    border-radius: 50%;
    bottom: 0;
    left: 0;
    transform: translate(-50%,50%);
}

.title-box::before{
    width:20rpx;
    height:20rpx;
    display: block;
    content: '';
    position: absolute;
    background: #F2F2F2;
    border-radius: 50%;
    bottom: 0;
    right: 0;
    transform: translate(50%,50%);
}
.title-box>text{
    float: right;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 10px;
    box-sizing: border-box;
}
.detail-box{
    width:100%;
    background: #FFF;
    padding: 25px 10px 16px 10px;
    box-sizing: border-box;
}
.detail-line{
    height: 40rpx;
    margin: 7px 0;
    line-height: 40rpx;
    font-size:14px;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:rgba(82,85,112,1);
    box-sizing: border-box;
}
.detail-line>view:first-child{
    float: left;
    width: 30%;
}
.detail-line>view:last-child{
    float: left;
    width: 70%;
    text-align: right;
    color: #A6A9B7;
}